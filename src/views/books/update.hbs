<section class="my-5">
    <div class="container">
        <div class="card">
            <div class="card-body">
                <form action="/books/update/{{data._id}}" method="POST" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="">Shoe Imagen</label>
                                <input type="file" name="zapato" class="form-control"  id=""placeholder="Your Img New">
                            </div>
                            <div class="form-group">
                                <label for="">title</label>
                                <input type="text" name="title" class="form-control" value="{{data.title}}" id=""placeholder="your title">
                            </div>
                            <div class="form-group">
                                <label for="">Author</label>
                                <input type="text" name="author" class="form-control" value="{{data.author}}" id=""placeholder="Name Actor">
                            </div>
                            <div class="form-group">
                                <label for="">Isbn</label>
                                <input type="text" name="isbn" value="{{data.isbn}}"
                                    pattern="(?:(?=.{17}$)97[89][ -](?:[0-9]+[ -]){2}[0-9]+[ -][0-9]|97[89][0-9]{10}|(?=.{13}$)(?:[0-9]+[ -]){2}[0-9]+[ -][0-9Xx]|[0-9]{9}[0-9Xx])"class="form-control" id="" placeholder="ISBN">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <p>Tu foto Actual</p>
                            <img src="/{{data.path}}" alt="">
                            <input type="hidden" name="">
                        </div>
                        <div class="my-4">
                            <input type="submit" class="btn btn-success" name="" value="Update" id="">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>